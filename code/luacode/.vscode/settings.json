    "version": "0.2.0",
    "configurations": [
        {
            "name": "call_mymod",
            "type": "lua-local",
            "request": "launch",
            "stopOnEntry": true,
            "cpath": "/usr/local/lib/lua/5.4/?.so",
            "cwd": "${workspaceFolder}/testlua/",
            "program": {
                "lua": "lua",
                "file": "${workspaceFolder}/testlua/?.lua"
            },
            "env": {
                "LUA_PATH": "./?.lua"
            },
        }
    ],
    "git.ignoreLimitWarning": true,
    "editor.formatOnType": true,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
}